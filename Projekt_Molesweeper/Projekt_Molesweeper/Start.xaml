<Window x:Class="Projekt_Molesweeper.Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt_Molesweeper"
        mc:Ignorable="d"
         Title="Start" Height="221" Width="170">


  <Grid Margin="0,0,0,-6">

    <StackPanel Margin="0,47,0,107">
      <Button x:Name="btn_beginner" Content="Beginner" HorizontalAlignment="Center" Click="Button_Click" FontFamily="Tw Cen MT"/>
    </StackPanel>

    <StackPanel Margin="0,104,0,61">
      <Button x:Name="btn_intermediate" Content="Intermediate" HorizontalAlignment="Center" FontFamily="Tw Cen MT" Click="Button_Click_1" ></Button>
    </StackPanel>

    <StackPanel Margin="0,155,0,38">
      <Button x:Name="btn_pro" Content="Pro" HorizontalAlignment="Center" FontFamily="Tw Cen MT" Click="btn_pro_Click"/>
    </StackPanel>

    <Label Content="Choose your Level:" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>

  </Grid>
</Window>
