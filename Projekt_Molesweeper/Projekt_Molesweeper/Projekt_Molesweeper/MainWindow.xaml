<Window x:Class="Projekt_Molesweeper.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test"
        mc:Ignorable="d"
         Title="MainWindow" Height="221" Width="auto">
  <Grid Margin="0,0,0,-6">

    <StackPanel Margin="0,47,0,128">
      <Button x:Name="btn_easy" Content="Beginner" HorizontalAlignment="Center" Click="Button_Click_Difficulty" FontFamily="Tw Cen MT"/>
    </StackPanel>

    <StackPanel Margin="0,88,0,87">
      <Button x:Name="btn_intermediate" Content="Intermediate" HorizontalAlignment="Center" FontFamily="Tw Cen MT" Click="Button_Click_Difficulty" ></Button>
    </StackPanel>

    <StackPanel Margin="0,129,0,50">
      <Button x:Name="btn_hard" Content="Pro" HorizontalAlignment="Center" FontFamily="Tw Cen MT" Click="Button_Click_Difficulty"/>
    </StackPanel>

      <Button Click="Button_Click_Start" Content="Start Game" RenderTransformOrigin="0.493,9.621" Height="19" Margin="0,166,0,26" FontFamily="Tw Cen MT" FontWeight="Bold"/>
    

    <Label Content="Choose your Level:" HorizontalAlignment="Center" VerticalAlignment="Top" Height="28"/>

  </Grid>
</Window>
